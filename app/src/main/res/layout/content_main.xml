<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="17dp"
        android:text="Sign Up"
        android:textSize="20sp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_first_name"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="67dp"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:layout_below="@+id/input_layout_first_name"
            android:layout_alignLeft="@+id/input_layout_first_name"
            android:layout_alignStart="@+id/input_layout_first_name"
            android:layout_marginTop="20dp"
            android:id="@+id/first_name"
            android:hint="First Name"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_layout_first_name"
        android:layout_alignLeft="@+id/input_layout_first_name"
        android:layout_alignStart="@+id/input_layout_first_name"
        android:layout_marginTop="20dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:layout_below="@+id/input_layout_last_name"
            android:layout_alignLeft="@+id/input_layout_last_name"
            android:layout_alignStart="@+id/input_layout_last_name"
            android:layout_marginTop="20dp"
            android:id="@+id/last_name"
            android:hint="Last Name"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_layout_last_name"
        android:layout_alignLeft="@+id/input_layout_last_name"
        android:layout_alignStart="@+id/input_layout_last_name"
        android:layout_marginTop="20dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:layout_below="@+id/input_layout_email"
            android:layout_alignLeft="@+id/input_layout_email"
            android:layout_alignStart="@+id/input_layout_email"
            android:layout_marginTop="20dp"
            android:id="@+id/email"
            android:hint="Email"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_layout_email"
        android:layout_alignLeft="@+id/input_layout_email"
        android:layout_alignStart="@+id/input_layout_email"
        android:layout_marginTop="20dp">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:layout_below="@+id/input_layout_password"
            android:layout_alignLeft="@+id/input_layout_password"
            android:layout_alignStart="@+id/input_layout_password"
            android:layout_marginTop="20dp"
            android:id="@+id/password"
            android:hint="Password"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_layout_password"
        android:layout_alignLeft="@+id/input_layout_password"
        android:layout_alignStart="@+id/input_layout_password"
        android:layout_marginTop="16dp">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:layout_below="@+id/input_layout_confirm_password"
            android:layout_alignLeft="@+id/input_layout_confirm_password"
            android:layout_alignStart="@+id/input_layout_confirm_password"
            android:layout_marginTop="20dp"
            android:id="@+id/confirm_password"
            android:hint="Confirm Password"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_mobile_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_layout_confirm_password"
        android:layout_alignLeft="@+id/input_layout_confirm_password"
        android:layout_alignStart="@+id/input_layout_confirm_password"
        android:layout_marginTop="20dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:layout_below="@+id/input_layout_mobile_no"
            android:layout_alignLeft="@+id/input_layout_mobile_no"
            android:layout_alignStart="@+id/input_layout_mobile_no"
            android:layout_marginTop="20dp"
            android:id="@+id/mobile_no"
            android:hint="Mobile No."/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_vehicle_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_layout_mobile_no"
        android:layout_alignLeft="@+id/input_layout_mobile_no"
        android:layout_alignStart="@+id/input_layout_mobile_no"
        android:layout_marginTop="20dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:layout_below="@+id/input_layout_vehicle_type"
            android:layout_alignLeft="@+id/input_layout_vehicle_type"
            android:layout_alignStart="@+id/input_layout_vehicle_type"
            android:layout_marginTop="20dp"
            android:id="@+id/vehicle_type"
            android:hint="Vehicle Type"/>
    </android.support.design.widget.TextInputLayout>


    <Button
        android:text="Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_layout_vehicle_type"
        android:layout_alignLeft="@+id/input_layout_vehicle_type"
        android:layout_alignStart="@+id/input_layout_vehicle_type"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="53dp"
        android:id="@+id/button2"
    android:onClick="onRegisterClick"/>

    <Button
        android:text="Map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_layout_vehicle_type"
        android:layout_alignLeft="@+id/input_layout_vehicle_type"
        android:layout_alignStart="@+id/input_layout_vehicle_type"
        android:layout_marginLeft="69dp"
        android:layout_marginStart="169dp"
        android:layout_marginTop="53dp"
        android:id="@+id/button3"
        android:onClick="onGoToMapClick"/>



</RelativeLayout>
